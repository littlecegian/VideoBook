<div class="container" id="judge_signup_form_container">
	<div class="row">
		<div class="form_container col-md-6 col-md-offset-3">
			<form action="r" method="post" accept-charset="utf-8" class="form" role="form" id="signup_form">   
				<legend>Sign Up as Judge</legend>
				<div class="row">
					<div class="col-xs-6 col-md-6">
						<input type="text" name="firstname" value="" class="form-control input-lg" placeholder="First Name"  />                        
					</div>
					<div class="col-xs-6 col-md-6">
						<input type="text" name="lastname" value="" class="form-control input-lg" placeholder="Last Name"  />                        
					</div>
				</div>
				<input type="text" name="email" value="" class="form-control input-lg" placeholder="Your Email"  />
				<div class="radio_row">
					<label> Institution : </label>                    
					<label class="radio-inline">
						<input type="radio" name="college" value="I" id=internal /> Texas A & M
					</label>
					<label class="radio-inline">
						<input type="radio" name="college" value="O" id=external /> External
					</label>
				</div>
				<button class="btn btn-lg btn-primary btn-block signup-btn" type="submit">
					Create my account
				</button>
			</form>          
		</div>
	</div>
</div>