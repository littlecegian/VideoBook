<div align ="top"; style="width:400px; margin-right:620px;margin-top: 100px; margin-left:auto;">
<iframe title="YouTube video player" width="640" height="390" src="http://www.youtube.com/embed/<%= @video.url %>" frameborder="0" allowfullscreen></iframe>
</div>
<div align ="left"; style="width:400px; margin-right:620px;margin-top: 100px; margin-left:auto;">
<font size="4">Please rate the video on scale of 1 to 5 for each criteria with 1 being the lowest and 5 the highest ratings.</font>
</div>

<div align ="center" class="clearfix" style="width:400px; margin-right:620px;margin-top:10px; margin-left:auto;">

	<form id="video_ratings_form" action="/video_ratings" method="post">
	<table name ="table_rating" cellpadding="4" width="500" border="0">
  	
  	<% Criteria.all.each do |crit| %>
  		<tr class = "tr_video_rating">
	  		<td>
	  		<font size="4"><%= crit.name %></font>
	  		</td>
	  		<td>
		    <input type="radio" name="<%= crit.name %>" value="1" id="one_one"/>
		    <label for="one_one">1</label>
			</td>
			<td>
		    <input type="radio"  name="<%= crit.name %>" value="2" id="one_two" />
		    <label for="one_two">2</label>
			</td>
			<td>
		    <input type="radio"  name="<%= crit.name %>" value="3" id="one_three" />
		    <label for="one_three">3</label>
		    </td>
			<td>
		    <input type="radio"  name="<%= crit.name %>" value="4" id="one_four" />
		    <label for="one_four">4</label>
		    </td>
			<td>
		    <input type="radio"  name="<%= crit.name %>" value="5" id="one_five" />
		    <label for="one_five">5</label>
		    </td>
		</tr>
 	<% end %>
    <input type="hidden" name="video_id" value= <%= @video.id %> >
	<tr style="height:80px;">
		<td> <button type="submit" style="margin-top:10px"> Submit </button> </td>
	</tr>
</table>
</form>
</div>
